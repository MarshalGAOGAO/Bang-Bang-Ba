<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C72E30"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#e0ffffff"
            android:textSize="20sp"
            android:background="@drawable/img1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textSize="20sp"
            android:layout_marginLeft="135dp"
            android:textColor="#e0ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:src="@drawable/greycircle"
                android:layout_marginLeft="100dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#e0000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:src="@drawable/redstring"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:layout_height="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单标题"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="#e0ff0000"
                />
            <ImageView
                android:src="@drawable/redstring"
                android:layout_marginLeft="10dp"
                android:layout_width="120dp"
                android:layout_height="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button
                android:background="@drawable/star_1"
                android:layout_marginLeft="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/star_1"
                style="?android:attr/borderlessButtonStyle"
            />
            <Button
                android:background="@drawable/star_1"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/star_2"
                style="?android:attr/borderlessButtonStyle"
                />
            <Button
                android:background="@drawable/star_1"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/star_3"
                style="?android:attr/borderlessButtonStyle"
                />
            <Button
                android:background="@drawable/star_1"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/star_4"
                style="?android:attr/borderlessButtonStyle"
                />
            <Button
                android:background="@drawable/star_1"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/star_5"
                style="?android:attr/borderlessButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="提交"
        android:background="#00ffffff"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/submitEvaluate"

        />

</LinearLayout>